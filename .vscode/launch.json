{
    "version": "0.2.0",
    "configurations": [
        //windows compilation
        {
            "name": "Debug C++ Program (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/TEST1.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "Run build script (Windows)",
            "internalConsoleOptions": "openOnSessionStart"
        },

        //linux compilation
        {
            "name": "Debug C++ Program (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/TEST1",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Run build script (Linux)",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}